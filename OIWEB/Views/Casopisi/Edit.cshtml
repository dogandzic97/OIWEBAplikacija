<body>

    <br /><br />
    <p>
        @ViewBag.Greska;
    </p>
    <div class="container">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>Часописи</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.IDCasopis)

                <div class="form-row">
                    @Html.Label("Наслов:")<br />
                    <div class="col-md-6 form-group">

                        <input type="text" name="Naslov" class="form-control" id="Naslov" data-rule="minlen:4" data-msg="Морате унети најмање 4 карактера" value="@Model.Naslov" />
                    </div>
                    <div class="validate"> </div>
                </div>

                div class="form-row">
                @Html.Label("Текст:")<br />
                <div class="col-md-6 form-group">
                    <textarea name="Tekst" class="form-control" id="Tekst" data-rule="minlen:4" data-msg="Морате унети најмање 4 карактера">@Model.Tekst</textarea>
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Садржај:")<br />
                <div class="col-md-6">
                    <textarea name="Sadrzaj" class="form-control" id="Sadrzaj" data-rule="minlen:4" data-msg="Морате унети најмање 4 карактера">@Model.Sadrzaj</textarea>
                </div>
            </div>

            <div class="form-row">
                @Html.Label("Датум:")<br />
                <div class="col-md-6 form-group">

                    <input type="text" name="Datum" id="Datum" class="form-control" placeholder="Datum" data-rule="Datum" data-msg="Морате унети најмање 4 карактера" value="@Model.Datum" />

                </div>
                <div class="validate"> </div>
            </div>

            <div class="form-group">
                @Html.Label("Број Издања:")
                <br />
                <div class="col-md-6 form-group">

                    <input type="text" name="BrojIzdanja" id="BrojIzdanja" class="form-control" placeholder="Број Издања" data-msg="Морате унети најмање 4 карактера" value="@Model.BrojIzdanja" />

                </div>
            </div>

            <div class="form-group">
                @Html.Label("Админ:")
                <div class="col-md-6 form-group">

                    <input type="text" name="IDKorisnika" id="IDKorisnika" class="form-control" placeholder="ИД Корисника" data-msg="Морате унети најмање 4 карактера" value="@Model.BrojIzdanja" />

                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>

        }

        <div>
            @Html.ActionLink("Назад на Часописе", "Index")
        </div>
    </div>

    <a href="#" class="back-to-top"> <i class="icofont-simple-up"> </i> </a>
    <!-- Vendor JS Files -->
    <script src="~/Content/assets/vendor/jquery/jquery.min.js"></script>
    <script src="~/Content/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/Content/assets/vendor/jquery.easing/jquery.easing.min.js"></script>
    <script src="~/Content/assets/vendor/php-email-form/validate.js"></script>
    <script src="~/Content/assets/vendor/venobox/venobox.min.js"></script>
    <script src="~/Content/assets/vendor/waypoints/jquery.waypoints.min.js"></script>
    <script src="~/Content/assets/vendor/counterup/counterup.min.js"></script>
    <script src="~/Content/assets/vendor/owl.carousel/owl.carousel.min.js"></script>
    <script src="~/Content/assets/vendor/isotope-layout/isotope.pkgd.min.js"></script>
    <script src="~/Content/assets/vendor/aos/aos.js"></script>
    <!-- Template ~ /Content/ Main JS File -->
    <script src="~/Content/assets/js/main.js"></script>

</body>

</html>
